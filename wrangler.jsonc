{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "sharehouse-times",
  "compatibility_date": "2026-01-08",
  "pages_build_output_dir": "./dist",
  "compatibility_flags": [
    "nodejs_compat"
  ],
  // KVストレージ（ニュースデータ保存用）
  "kv_namespaces": [
    {
      "binding": "NEWS_KV",
      "id": "6b596232dc464d40a8dfb2f5c5eb5fe2"
    }
  ],
  // 更新スケジュール（GitHub Actionsで実行）
  // JST 07:00 と JST 18:00 の1日2回更新
  "vars": {
    "UPDATE_SCHEDULE": "07:00 JST, 18:00 JST"
  }
}
