{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "sharehouse-news",
  "compatibility_date": "2026-01-08",
  "pages_build_output_dir": "./dist",
  "compatibility_flags": [
    "nodejs_compat"
  ],
  // KVストレージ（ニュースデータ保存用）
  "kv_namespaces": [
    {
      "binding": "NEWS_KV",
      "id": "sharehouse-news-kv"
    }
  ],
  // 1日2回自動更新（日本時間）
  // UTC 22:00 = JST 07:00（朝）
  // UTC 09:00 = JST 18:00（夕方）
  "triggers": {
    "crons": ["0 22 * * *", "0 9 * * *"]
  }
}
