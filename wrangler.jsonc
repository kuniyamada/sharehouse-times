{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "sharehouse-times",
  "compatibility_date": "2026-01-08",
  "pages_build_output_dir": "./dist",
  "compatibility_flags": [
    "nodejs_compat"
  ],
  // KVストレージ（ニュースデータ保存用）
  "kv_namespaces": [
    {
      "binding": "NEWS_KV",
      "id": "6b596232dc464d40a8dfb2f5c5eb5fe2"
    }
  ],
  // 自動更新: リクエスト時に6時間以上経過していれば自動更新
  // 手動更新: /api/news/refresh (POST) で強制更新
  "vars": {
    "UPDATE_INTERVAL_HOURS": "6"
  }
}
